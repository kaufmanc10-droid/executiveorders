# ================================================================
# reset_environment.R
# Deletes generated outputs so you can re-run generator.R cleanly
# ================================================================

# Target directories and files to wipe
targets <- c(
  "executive_orders_pdf",
  "executive_orders_txt",
  "executive_orders_cleaned",
  "eo_chunks_final.csv",
  "EO_UI.html"
)

# Remove files / folders if present
for (t in targets) {
  if (file.exists(t)) {
    if (dir.exists(t)) {
      unlink(t, recursive = TRUE, force = TRUE)
      cat("ğŸ—‘ï¸  Deleted folder:", t, "\n")
    } else {
      file.remove(t)
      cat("ğŸ—‘ï¸  Deleted file:", t, "\n")
    }
  } else {
    cat("â© Skipped (not found):", t, "\n")
  }
}

cat("\nâœ… Environment reset complete. Ready to re-run generator.R.\n")
